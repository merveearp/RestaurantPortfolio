@model EditContactViewModel
@{
    ViewData["Title"] = "İletişim Ayarları";
}

<div class="container-fluid pt-4 px-4">
    <form asp-area="Admin" asp-controller="AppSetting" asp-action="EditContactSettings" method="post"
        enctype="multipart/form-data">
        <h6 class="text-primary display-6 text-center mb-5">İletişim Ayarları</h6>
        <div class="row g-4 bg-light rounded h-100 p-4">
            <div class="col-sm-12 col-xl-6">
                <div class="mb-3">
                    <label asp-for=AddressText class="form-label"></label>
                    <input asp-for=AddressText class="form-control">
                    <span asp-validation-for=AddressText class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for=AddressDistrict class="form-label"></label>
                    <input asp-for=AddressDistrict class="form-control">
                    <span asp-validation-for=AddressDistrict class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for=AddressProvince class="form-label"></label>
                    <input asp-for=AddressProvince class="form-control">
                    <span asp-validation-for=AddressProvince class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-12 col-xl-6">
                <div class="mb-3">
                    <label asp-for=PhoneNumber class="form-label"></label>
                    <input asp-for=PhoneNumber class="form-control">
                    <span asp-validation-for=PhoneNumber class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for=Email class="form-label"></label>
                    <input asp-for=Email class="form-control">
                    <span asp-validation-for=Email class="text-danger"></span>
                </div>
                
            </div>
            <div class="col-sm-12 mt-3 text-end">
                <a href="/admin/appsetting" class="btn btn-warning">Tüm Ayarlar</a>
                <button type="submit" class="btn btn-success btn-icon" title="Kaydet">
                 <i class="fas fa-save"></i>
                 </button>
            </div>
        </div>

    </form>
</div>
