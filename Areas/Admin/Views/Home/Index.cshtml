@model HomeViewModel
@{
    ViewData["Title"] = "Admin Anasayfa";
}
<div class="content-wrapper">
            
            <div class="row">
              <div class="col-12 grid-margin">
                <div class="card">
                  <div class="card-body">
                    <h6 class="card-title text-danger ">Müşteri Görüşleri</h6>
                    <div class="table-responsive">
                      <table class="table">
                        <thead>
                          <tr>
                            <th> Müşteri Profili </th>
                            <th> Müşteri İsmi</th>
                            <th> Müşteri Yorumu </th>
                            <th> Yorum Tarihi </th>
                          </tr>
                        </thead>

                        <tbody>
                          @foreach(var x in Model.Clients)
                          {
                            <tr>
                            <td>
                              <img src="@x.ClientImageUrl" class="me-2" alt="image">
                             </td>
                            <td> @x.Name</td>
                            <td>
                              <label class="badge badge-gradient-success">@x.Comment</label>
                            </td>
                            <td>@x.SendingTime </td>
                          </tr>  
                          }
                                                 
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-lg-5 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body p-0 d-flex">
                    <div id="inline-datepicker" class="datepicker datepicker-custom"></div>
                  </div>
                </div>
              </div>
              <div class="col-lg-7 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h6 class="card-title">Hakkımızda</h6>
                    
                    <div class="row mt-3">
                      <div class="col-6 pe-1">  
                        <img src="http://localhost:5115/ui/img/about-1.jpg" class="mb-2 mw-100 w-100 rounded" alt="image">
                        <img src="http://localhost:5115/ui/img/about-2.jpg" class="mw-100 w-100 rounded" alt="image">
                      </div>
                      <div class="col-6 ps-1">
                        <img src="http://localhost:5115/ui/img/about-3.jpg" class="mb-2 mw-100 w-100 rounded" alt="image">
                        <img src="http://localhost:5115/ui/img/about-4.jpg" class="mw-100 w-100 rounded" alt="image">
                      </div>
                    </div>
                    <div class="d-flex mt-5 align-items-top">
                      
                      
                      
                    </div>
                  </div>
                </div>
              </div>
            </div>            
  </div>