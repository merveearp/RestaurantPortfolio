@model MealCreateViewModel
@{
    ViewData["Title"] = "Yeni Yemek Kaydı";
}
   
        <div class="container-fluid pt-4 px-4">
             <div class="bg-light rounded p-4">
             <h6 class="mb-4 display-6 fs-3 text-primary ">Yeni Şef Kaydı</h6>
                  <form asp-area="Admin"asp-controller="Meal"asp-action="Create" method="post" enctype="multipart/form-data">  
               
            <div class="row">
             <div class="col-12 col-xl-8">
             <div class="mb-3">
                <div class="text-danger" asp-validation-summary="All"></div>
            <label asp-for="Name" class="form-label"></label>
              <input asp-for="Name" class="form-control">   
              <span class="text-danger"asp-validation-for="Name"></span>                    
                 </div>
            <div class="form-group col-md-12">
                <label asp-for=CategoryList></label>
                <select asp-items=@Model.CategoryList asp-for=CategoryId class="form-select form-control-lg" id="largeSelect"></select>
                </div>
                <div class="mb-3 input-group"> 
            <span asp-for="Ingredient" class="input-group-text"></span>
              <textarea asp-for="Ingredient" class="form-control"></textarea>   
              <span class="text-danger"asp-validation-for="Ingredient"></span>                    
                </div>
                 <div class="mb-3"> 
            <label asp-for="Price" class="form-label"></label>
              <input asp-for="Price" class="form-control">   
              <span class="text-danger"asp-validation-for="Price"></span>                    
                 </div>
              
             
            <div class="mb-3 form-check">
                <input asp-for="IsActive" class="form-check- ">
                <label class=""asp-for="IsActive"class="form-check-label"></label>
                </div>
                 <div class="mb-3">
                        <label asp-for=Image class="form-label">Resim Yükle</label>
                        <input asp-for=Image class="form-control" type="file" id="image"
                            accept="image/png,image/jpg,image/jpeg,image/webp">
                        <div class="mt-2">
                            <img id="image-preview" width="100" height="100" class="d-none"/>
                        </div>
                        <span class="text-danger">@ViewBag.ImageError</span>
                    </div>
                </div>
                </div>   
                 <div class="d-flex justify-content-end align-items-center gap-2">
    <!-- Kaydet Butonu -->
    <button type="submit" class="btn btn-success btn-icon" title="Kaydet">
        <i class="fas fa-save"></i>
    </button>

    <!-- Vazgeç Butonu -->
    
      <a asp-area="Admin" asp-controller="Meal" asp-action="Index" 
       class="btn btn-warning btn-icon d-flex align-items-center justify-content-center" title="Vazgeç">
        <i class="fas fa-close "></i>
    </a>  
    
    
</div>                      
                </form>
                        </div>
                    </div>
  <script>
        $("#image").on("change", function (e) {
            const selectedFiles = e.target.files;
            $("#image-preview").removeClass("d-none");
            $("#image-preview").attr("src", window.URL.createObjectURL(selectedFiles[0]));
        })
    </script>    