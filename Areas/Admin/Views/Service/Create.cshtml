@model ServiceCreateViewModel
@{
    ViewData["Title"] = "Yeni Hizmet";
}
   
        <div class="container-fluid pt-4 px-4">
             <div class="bg-light rounded p-4">
                  <form asp-area="Admin"asp-controller="Service"asp-action="Create" method="post">  
             <h6 class="mb-4 display-6 fs-3 text-primary ">Yeni Hizmet</h6>  
            <div class="row">
             <div class="col-12 col-xl-8">
             <div class="mb-3">
                <div class="text-danger" asp-validation-summary="All"></div>
            <label asp-for="Title" class="form-label"></label>
              <input asp-for="Title" class="form-control">   
              <span class="text-danger"asp-validation-for="Title"></span>                    
                 </div>
                  <div class="mb-3">
             <div class="input-group">
            <span asp-for="Description" class="input-group-text">Açıklama</span>
             <textarea asp-for="Description" rows="" class="form-control"></textarea>
                     
             <div>
             <span class="text-danger"asp-validation-for="Description"></span> 
            </div>
                     
                      </div>
                    </div>  
             <div class="mb-3 d-flex justify-content-between" >
                <div>
                <label asp-for="Icon" class="form-label"></label>
            <select asp-items="@Model.IconList"asp-for="Icon" class="form-select-sm mb-2">
             </select>       
             </div>
            <div class="d-flex align-items-center">
            <div class="icon"><i id="bi-icon-i"class="bi icon "></i>
            </div>
            </div>  

            </div> 
            <div class="mb-3 form-check">
                <input asp-for="IsActive" class="form-check- ">
                <label class=""asp-for="IsActive"class="form-check-label"></label>
                </div>
                </div>
                </div>   
                 <div class="d-flex justify-content-end align-items-center gap-2">
    <!-- Kaydet Butonu -->
    <button type="submit" class="btn btn-success btn-icon" title="Kaydet">
        <i class="fas fa-save"></i>
    </button>
@if(ViewBag.IsActive=true)
{
    <!-- Vazgeç Butonu -->
    <a asp-area="Admin" asp-controller="Service" asp-action="Index" asp-route-id="true" 
       class="btn btn-warning btn-icon d-flex align-items-center justify-content-center" title="Vazgeç">
        <i class="fas fa-close "></i>
    </a>
}
    
</div>                
                </form>
                        </div>
                    </div>
    