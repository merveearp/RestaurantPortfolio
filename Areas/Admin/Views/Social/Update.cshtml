@model SocialUpdateViewModel
@{
    ViewData["Title"] = "Medya Güncelleme";
}
   
        <div class="container-fluid pt-4 px-4">
             <div class="bg-light rounded p-4">
            <h6 class="mb-4 display-6 fs-3 text-primary ">Kategori Güncelleme</h6>
                <form asp-area="Admin"asp-controller="Social"asp-action="Update" method="post">
            <input type="hidden" asp-for=UpdatedDate/>

            <div class="row">
             <div class="col-12 col-xl-8">
             <div class="mb-3">
            <div class="text-danger" asp-validation-summary="All"></div>
            <label asp-for="Name" class="form-label"></label>
              <input asp-for="Name" class="form-control">   
              <span class="text-danger"asp-validation-for="Name"></span>                    
                 </div>
                  <div class="mb-3">
            <label asp-for="Url" class="form-label"></label>
              <input asp-for="Url" class="form-control">   
              <span class="text-danger"asp-validation-for="Url"></span>                    
                 </div>

             <div class="mb-3 d-flex justify-content-between" >
                <div>
                <label asp-for="Icon" class="form-label"></label>
            <select asp-items="@Model.IconList"asp-for="Icon" class="form-select-sm mb-2">
             </select>       
             </div>
            <div class="d-flex align-items-center">
            <div class="icon"><i id="bi-icon-i"class="bi icon "></i>
            </div>
            </div>  
            </div> 
              
                <div class="mb-3 form-check">
                <input asp-for="IsActive" class="form-check-input">
                <label asp-for="IsActive"class="form-check"></label>
                </div>
                <div class="form-group">
                    <span class="text-primary lead">Son Güncelleme Tarihi:</span>
                    <span class="lead">@(Model.UpdatedDate==null ? "Bu kategori henüz güncellenmemiştir":
                        Model.UpdatedDate)</span>
                 </div>
                </div>
                </div>   
                  <div class="d-flex justify-content-end align-items-center gap-2">
    <!-- Kaydet Butonu -->
    <button type="submit" class="btn btn-success btn-icon" title="Kaydet">
        <i class="fas fa-save"></i>
    </button>

   @if(ViewBag.IsActive=true)
{
    <!-- Vazgeç Butonu -->
    <a asp-area="Admin" asp-controller="Social" asp-action="Index" asp-route-id="true" 
       class="btn btn-warning btn-icon d-flex align-items-center justify-content-center" title="Vazgeç">
        <i class="fas fa-close "></i>
    </a>
}
</div>                      
                </form>
                        </div>
                    </div>
